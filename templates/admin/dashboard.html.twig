{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Photography Admin Dashboard{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Categories</div>
                <div class="card-body">
                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\CategoryCrudController') }}"
                       class="btn btn-primary">Manage Categories</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Galleries</div>
                <div class="card-body">
                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\GalleryCrudController') }}"
                       class="btn btn-primary">Manage Galleries</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Images</div>
                <div class="card-body">
                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\ImageCrudController') }}"
                       class="btn btn-primary">Manage Images</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
